<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/x20"
    android:background="@color/c_light_blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_pickup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pickIcon"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x15"
                    android:contentDescription=""
                    android:src="@drawable/ic_launcher" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/grey">

                    <com.jota.autocompletelocation.AutoCompleteLocation
                        android:id="@+id/edt_pickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x12"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_marginTop="@dimen/x2"
                        android:background="@android:color/transparent"
                        android:gravity="start|center_vertical"
                        android:hint="@string/pickup_location"
                        android:imeOptions="actionDone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="@dimen/x14"
                        app:background_layout="@android:color/transparent"
                        app:hint_text="@string/pickup_location" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x50"
                android:alpha="0.4"
                android:background="@drawable/line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_destination"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:layout_below="@+id/ll_pickup"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_destinationIcon"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x15"
                android:contentDescription=""
                android:src="@drawable/ic_launcher" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >

                <com.jota.autocompletelocation.AutoCompleteLocation
                    android:id="@+id/edt_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x12"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/x2"
                    android:gravity="start|center_vertical"
                    android:imeOptions="actionDone"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/x14"
                    app:background_layout="@color/edit_text_color"
                    app:hint_text="@string/where_to" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x20_"
        android:layout_marginRight="@dimen/x20_"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x20"
        android:alpha="0.4"
        android:background="@drawable/line" />
    <ListView
        android:id="@+id/recent_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>