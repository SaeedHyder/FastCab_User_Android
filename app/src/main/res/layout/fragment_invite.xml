<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x70"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/carLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/car1"
            tools:ignore="ContentDescription" />

        <com.app.fastcab.ui.views.PinEntryEditText
            android:id="@+id/txt_pin_entry"
            android:layout_width="@dimen/x300"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginBottom="@dimen/x20"
            android:background="@null"
            android:cursorVisible="false"
            app:pinBackgroundDrawable="@drawable/invite_boarder"
            app:pinTextBottomPadding="@dimen/x20"
            android:digits="1234567890"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="4"
            android:paddingTop="@dimen/x50"
            android:paddingBottom="@dimen/x10"
            android:text="1317"
            android:textColor="@color/button_color"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:visibility="visible"
            app:pinLineColors="@color/transparent" />


        <com.app.fastcab.ui.views.AnyTextView
            android:id="@+id/txt_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.6"
            android:gravity="center"
            android:text="@string/share_this_invite_code_with_your_nfriends_and_earn_free_rides"
            android:textColor="@color/black"
            android:textSize="@dimen/x18"
            app:typeface="Roboto-Regular.ttf" />

        <LinearLayout
            android:id="@+id/ll_socialIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x15"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_messenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:src="@drawable/messenger_icon"
                tools:ignore="ContentDescription" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="fill_parent"
                android:alpha="0.2"
                android:background="@drawable/text" />

            <ImageView
                android:id="@+id/iv_whatsup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:src="@drawable/whatsapp"
                tools:ignore="ContentDescription" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>