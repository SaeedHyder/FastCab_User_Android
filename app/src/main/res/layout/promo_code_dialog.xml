<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/roundshapelayout"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x340"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x10"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        >

        <com.app.fastcab.ui.views.AnyTextView
            android:id="@+id/txt_PromoCodeHeading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:alpha="0.7"
            android:gravity="center"
            android:text="Promo/Gift Code"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:typeface="Roboto-Regular.ttf" />


        <com.app.fastcab.ui.views.AnyEditTextView
            android:id="@+id/txt_promoCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x40"
            android:layout_marginBottom="@dimen/x9"
            android:inputType="textEmailAddress"
            android:gravity="center"
            android:background="@color/transparent"
            android:maxLength="10"
            android:maxLines="1"
            android:hint="Enter a promo/gift code"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:alpha="0.7"
            app:typeface="Roboto-Regular.ttf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x18"
            android:layout_marginRight="@dimen/x18"
            android:layout_marginBottom="@dimen/x35"
            android:layout_marginTop="@dimen/x5"
            android:alpha="0.6"
            android:background="@drawable/text"/>






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/textLayout"
        >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x7"
            android:layout_marginBottom="@dimen/x5"
            android:text="Cancel"
            android:background="@color/transparent"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/x16" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#37949C"
            android:layout_marginRight="@dimen/x7"
            android:layout_marginBottom="@dimen/x5"
            android:background="@color/transparent"
            android:textSize="@dimen/x16"
            android:text="Submit"
            android:textAllCaps="false"
            android:layout_weight="1"
            />

    </LinearLayout>

</LinearLayout>