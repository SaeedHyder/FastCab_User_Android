<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

   <RelativeLayout
        android:id="@+id/ll_ProfileImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/x20"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/CircularImageSharePop"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x100"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:src="@color/white"/>
       <ImageView
           android:id="@+id/iv_camera"
           android:layout_width="@dimen/x20"
           android:layout_height="@dimen/x20"
           android:layout_marginLeft="@dimen/x10"
           android:src="@drawable/ic_launcher"
           android:layout_marginEnd="28dp"
           android:layout_marginBottom="10dp"
           android:layout_alignParentBottom="true"
           android:layout_alignEnd="@+id/CircularImageSharePop" />



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_SignUpFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginBottom="@dimen/x10"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_userName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_username"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:contentDescription=""
                android:src="@drawable/ic_launcher" />

            <com.app.fastcab.ui.views.AnyEditTextView
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:hint="User Name"
                android:background="@android:color/transparent"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:testType="personName"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:contentDescription=""
                android:src="@drawable/ic_launcher" />

            <com.app.fastcab.ui.views.AnyEditTextView
                android:id="@+id/edtemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:hint="Email"
                android:background="@android:color/transparent"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:testType="email"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_currentAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ll_currentAddress"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:contentDescription=""
                android:src="@drawable/ic_launcher" />

            <com.app.fastcab.ui.views.AnyEditTextView
                android:id="@+id/edtll_currentAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:hint="Current Address"
                android:background="@android:color/transparent"
                android:imeOptions="actionNext"
                android:inputType="textPostalAddress"
                android:maxLength="32"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:testType="personName"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_MobileNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_MobileNumber"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:contentDescription=""
                android:src="@drawable/ic_launcher" />

            <com.app.fastcab.ui.views.AnyEditTextView
                android:id="@+id/edtMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:hint="Mobile Number"
                android:background="@android:color/transparent"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:testType="numeric"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_zipCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_zipCode"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:contentDescription=""
                android:src="@drawable/ic_launcher" />

            <com.app.fastcab.ui.views.AnyEditTextView
                android:id="@+id/edtzipCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:background="@android:color/transparent"
                android:imeOptions="actionNext"
                android:hint="Zip Code"
                android:inputType="number"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:testType="numeric"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_DateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_DateOfBirth"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:contentDescription=""
                android:src="@drawable/ic_launcher" />

            <com.app.fastcab.ui.views.AnyTextView
                android:id="@+id/edtDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:hint="Date Of Birth"
                android:background="@android:color/transparent"
                android:imeOptions="actionNext"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Gender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
       android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_Gender"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:contentDescription=""
                android:src="@drawable/ic_launcher" />

            <Spinner
                android:id="@+id/sp_Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:imeOptions="actionNext"
                android:layout_toRightOf="@+id/iv_Gender"
                android:layout_centerVertical="true"
                android:hint="Male"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x15"
                android:alpha="0.6"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_Password"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:contentDescription=""
                android:src="@drawable/ic_launcher" />

            <com.app.fastcab.ui.views.AnyEditTextView
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:background="@android:color/transparent"
                android:imeOptions="actionNext"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ConfirmPassword"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:contentDescription=""
                android:src="@drawable/ic_launcher" />

            <com.app.fastcab.ui.views.AnyEditTextView
                android:id="@+id/edt_ConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x20"
                android:background="@android:color/transparent"
                android:imeOptions="actionNext"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf" />

        </LinearLayout>


        <Button
            android:id="@+id/btn_submuit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:text="Sing Up"
            android:textColor="@color/white"
            android:textSize="@dimen/x14"
            android:background="#37949C"/>

        <LinearLayout
            android:id="@+id/ll_bottomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x20"
            android:orientation="horizontal">


            <com.app.fastcab.ui.views.AnyTextView
                android:id="@+id/txt_clickHere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x5"
                android:textStyle="bold"
                android:textSize="@dimen/x14"
                android:textColor="@color/white"
                android:text="@string/click_here"
                app:typeface="Roboto-Regular.ttf"
                />
            <com.app.fastcab.ui.views.AnyTextView
                android:id="@+id/txt_toAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x12"
                android:layout_marginRight="@dimen/x5"
                android:textColor="@color/white"
                android:text="@string/to_accept"
                app:typeface="Roboto-Regular.ttf"
                />
            <com.app.fastcab.ui.views.AnyTextView
                android:id="@+id/txt_TermCond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/x14"
                android:textColor="@color/white"
                android:text="@string/terms_and_condition"
                app:typeface="Roboto-Regular.ttf"
                />


        </LinearLayout>


        <!--irrelavent Layout-->

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="invisible">


        </LinearLayout>

</LinearLayout>


</LinearLayout>

</ScrollView>