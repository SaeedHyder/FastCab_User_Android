<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/x20"
   >

        <com.app.fastcab.ui.views.AnyTextView
            android:id="@+id/txtverificaiton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:alpha="0.7"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/x50"
           android:text="@string/enter_verification_code"
            android:textColor="@color/white"
            android:textSize="@dimen/x18"
            app:typeface="Roboto-Regular.ttf" />
        <com.app.fastcab.ui.views.AnyTextView
            android:id="@+id/txtverify_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:layout_below="@+id/txtverificaiton"
            android:alpha="0.7"
            android:gravity="center"
            android:layout_marginTop="@dimen/x15"
            android:text="@string/a_verification_code_has_been_send_to_your_mobile_phone"
            android:textColor="@color/white"
            android:textSize="@dimen/x16"
            app:typeface="Roboto-Regular.ttf" />
       <com.app.fastcab.ui.views.PinEntryEditText
            android:id="@+id/txt_pin_entry"
            android:layout_width="@dimen/x200"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
           android:textColor="@color/white"
            android:layout_below="@+id/txtverify_message"
            android:maxLength="4"
            android:padding="10dp"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginBottom="@dimen/x20"
            android:imeOptions="actionDone"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:visibility="visible"
            app:pinLineColors="@color/button_color" />
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:layout_centerVertical="true"
            android:layout_below="@+id/txt_pin_entry"
            android:background="@color/button_color"
            android:text="@string/submit"
            android:layout_marginTop="@dimen/x15"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />

    <com.app.fastcab.ui.views.AnyTextView
        android:id="@+id/txt_reset_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right"
        android:alpha="0.7"
        android:gravity="center_horizontal"
        android:layout_below="@+id/btn_submit"
        android:layout_marginTop="@dimen/x30"
        android:text="@string/reset_code"
        android:textColor="@color/white"
        android:textSize="@dimen/x16"
        app:typeface="Roboto-Regular.ttf" />
</RelativeLayout>