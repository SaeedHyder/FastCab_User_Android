<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/x10">

    <ImageView
        android:id="@+id/iv_Notificationlogo"
        android:layout_width="@dimen/x50"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/logo_a" />

    <com.app.fastcab.ui.views.AnyTextView
        android:id="@+id/txt_Notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignBottom="@+id/iv_Notificationlogo"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/x10"
        android:layout_toEndOf="@+id/iv_Notificationlogo"
        android:gravity="center_vertical"
        android:text="Dummy Data Dummy Data"
        android:textColor="@color/black"
        android:textSize="@dimen/x15"
        app:typeface="Roboto-Regular.ttf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginTop="@dimen/x7"
        android:layout_below="@+id/txt_Notification"
        android:background="@drawable/line" />
</RelativeLayout>