<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/ll_cashOnDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:paddingTop="@dimen/x10"
        android:paddingBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginBottom="@dimen/x5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_cashOnDilevery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/cash"/>

        <com.app.fastcab.ui.views.AnyTextView
            android:id="@+id/txt_cashOnDilevery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginLeft="@dimen/x10"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Cash On Delivery"
            android:textColor="@color/white"
            android:textSize="@dimen/x14"
            app:typeface="Roboto-Regular.ttf"
            />
        <ImageView
            android:id="@+id/iv_selectCOD"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/tick"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.6"
        android:background="@drawable/text"/>

    <LinearLayout
        android:id="@+id/ll_creditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:paddingTop="@dimen/x10"
        android:paddingBottom="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_creditCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/credit_card"/>

        <com.app.fastcab.ui.views.AnyTextView
            android:id="@+id/txt_creditCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_marginLeft="@dimen/x10"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Credit Card"
            android:textColor="@color/white"
            android:textSize="@dimen/x14"
            app:typeface="Roboto-Regular.ttf"
            />
        <ImageView
            android:id="@+id/iv_selectCreditCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:src="@drawable/tick"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.6"
        android:background="@drawable/text"/>


</LinearLayout>