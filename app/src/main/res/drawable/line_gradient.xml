<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <item
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp">
        <shape>
            <gradient
                android:startColor="#cccbcb"
                android:endColor="#fafbfa"
                android:angle="90">

            </gradient>
            <stroke

                android:width="1dp"
                android:color="#e8e9e8" />
        </shape>
    </item>

</layer-list>